{% extends 'base.html.twig' %}

{% block title %}Edit Note{% endblock %}

{% block body %}

    <h1>Edit Note</h1>
    <form name="note" method="post">
        <div id="note">
            <div>
                <label for="note_title" class="required">Title</label>
                <input type="text" id="note_title" value="{{ note.title }}" name="form[title]" required="required" maxlength="255" />
            </div>
            <div>
                <label for="note_description">Description</label>
                <textarea id="note_description" name="form[description]">{{ note.description }}</textarea>
            </div>
        </div>
        <button class="btn">Save</button>
    </form>
    <form method="post" action="{{ path('note_delete', {'id': note.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
        <button class="btn">Delete</button>
    </form>
    <a href="{{ path('note_index') }}">back to list</a>
    </body>

{% endblock %}
